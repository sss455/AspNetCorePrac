@model IEnumerable<SelfAspNetCore.Models.Book>

@* 2.4.5項 Hello/List.cshtmlをコピー *@
<table class="table">
    @* テーブルヘッダー *@
    <thead>
        <tr>
            <th>ISBNコード</th>
            <th>書名</th>
            <th>価格</th>
            <th>出版社</th>
            <th>刊行日</th>
            <th>配布サンプル</th>
        </tr>
    </thead>
    @* テーブルボディ *@
    <tbody>
        @* リストの内容を繰り返し表示 *@
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Isbn</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Publisher</td>
                <td>@item.Published.ToString("D")</td>
                <td>@item.Sample</td>
            </tr>
        }
    </tbody>
</table>