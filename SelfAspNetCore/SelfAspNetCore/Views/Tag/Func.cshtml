
@{
    ViewData["Title"] = "Func";

    var msg = "WINGSプロジェクトは、ライター山田太郎が務める執筆コミュニティです。";
}

@functions {
    public static string Truncate(string text, int length=10, string omission="...")
    {
        if(text.Length <= length) return text;
        return text.Substring(0, length-1) + omission;
    }
}

@Truncate(msg, 10, "～")
